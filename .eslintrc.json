{
  "env": {
    "browser": true,
    "es6": true,
    "jest/globals": true
  },
  "extends": [
    "plugin:react/recommended",
    "airbnb",
    "plugin:jsx-a11y/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "babel",
    "jsx-a11y",
    "jest"
  ],
  "rules": {
    "react/jsx-filename-extension": [0],
    "import/prefer-default-export": "off",
    "comma-dangle": ["error", "never"],
    "arrow-parens": ["error", "never"]
  }
}
